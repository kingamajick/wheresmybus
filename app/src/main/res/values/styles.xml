<resources>

    <declare-styleable name="AppTheme">
        <attr name="textContentPrimary" format="reference"/>
        <attr name="textContentSecondary" format="reference"/>
        <attr name="textContentTertiary" format="reference"/>

        <attr name="listContainer" format="reference"/>

        <attr name="route" format="reference"/>
    </declare-styleable>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="textContentPrimary">@style/TextContentPrimary</item>
        <item name="textContentSecondary">@style/TextContentSecondary</item>
        <item name="textContentTertiary">@style/TextContentTertiary</item>

        <item name="listContainer">@style/ListContainer</item>

        <item name="route">@style/Route</item>
    </style>

    <style name="AppTheme.ThemeOverlay.BottomBar" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="TextContentPrimary">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="TextContentSecondary">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
    </style>

    <style name="TextContentTertiary">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
    </style>

    <style name="ListContainer">
        <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
        <item name="android:paddingLeft">?android:attr/listPreferredItemPaddingLeft</item>
        <item name="android:paddingRight">?android:attr/listPreferredItemPaddingRight</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="Route">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:background">@drawable/bg_route</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>


</resources>
